datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Wallet {
  memberId   Int          @id
  userTag    String
  balance    Int
  Possession Possession[]
}

model Item {
  name       String       @id
  price      Int
  stock      Int
  Possession Possession[]
}

model Possession {
  owner    Wallet @relation(fields: [ownerId], references: [memberId])
  item     Item   @relation(fields: [itemName], references: [name])
  stock    Int
  ownerId  Int
  itemName String

  @@id([ownerId, itemName])
}
