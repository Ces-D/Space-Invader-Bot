datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Wallet {
  discordId  Int          @id
  userTag    String
  balance    Int
  Possession Possession[]
}

model Item {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  price      Int
  stock      Int
  Possession Possession[]
}

model Possession {
  id            Int    @id @default(autoincrement())
  owner         Wallet @relation(fields: [userDiscordId], references: [discordId])
  item          Item   @relation(fields: [itemId], references: [id])
  stock         Int
  userDiscordId Int
  itemId        Int
}
